        function sendScore() {
            $.ajax({
                type: 'post',
                //dataType: 'JSON',
                data: {
                    //name: playerName,
                    //score: score
                    name: "<%= name %>",
                    score: player.score
                },
                //contentType: 'application/json',
                url: 'http://localhost:5000/sendScore',
                success: function(data) {
                    console.log('Score sent');
                }
            });
        }

    </script>
